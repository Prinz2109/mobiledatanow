<canvas bgcolor="#EAEAEA" width="800" height="510" debug="true">
	
   <view x="20" y="20"> 
    <simplelayout spacing="10"/>
    <tabs id="t1" x="5">
    	
        <tabpane id="p1" inset_left="0" inset_top="0" inset_bottom="0" inset_right="0">Pane 1
			<method event="oninit">
				this.content.setWidth(canvas.width);
	    this.content.setHeight(this.immediateparent.height);
		    </method>            
            <button>do nothing</button>
        </tabpane>
        
        <tabpane id="p2" selected="true" >Pane 2
            <simplelayout spacing="5"/>
            <button>faster</button>
            <radiogroup>
                <radiobutton>Curt</radiobutton>
                <radiobutton>Prefer fairly wordy</radiobutton>
                <radiobutton>I really prefer lots of extra words and fluff in my selections</radiobutton>
            </radiogroup>
        </tabpane>
        
        <tabpane id="p3" text="Pane 3" inset_left="10" inset_top="10" inset_bottom="10" inset_right="10">
 			<method event="oninit">
				
	    
		    </method> 
		
		    <tabs x="5" height="150" width="300">
		    
		        <tabpane>stuff
		            <simplelayout spacing="5"/>
		            <button>stuff</button>
		            <radiogroup>
		                <radiobutton>test</radiobutton>
		                <radiobutton>other</radiobutton>
		            </radiogroup>
		        </tabpane>
		        
		        <tabpane>more
		            <button>more</button>
		        </tabpane>
		        
		    </tabs>
        </tabpane>
        
    </tabs>
    
    <button text="set tabs to width=500 height=300" x="5"
    		onclick="p1.content.setWidth(500);p3.content.setHeight(300);"/>
    				
    	
  </view>
</canvas>